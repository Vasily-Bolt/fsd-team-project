mixin single-datepicker(object)
	+text-field-with-info({tfType: 'dropdown-field', tfDropdownHidden: true, tfPlaceholder: object.dateSet
		,tfName: object.id, title: object.title})

mixin multi-datepicker(object)
	.datepicker(id=object.id+'-multiple')
		.datepicker__field
			+text-field-with-info({tfType: 'dropdown-field', tfDropdownHidden: true, tfPlaceholder: object.setDateStart
				,title: object.titleStart, tfName: object.id+'-multiple-first'})
		.datepicker__field
			+text-field-with-info({tfType: 'dropdown-field', tfDropdownHidden: true, tfPlaceholder: object.setDateEnd
				,title: object.titleEnd, tfName: object.id+'-multiple-second'})