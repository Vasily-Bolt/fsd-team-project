mixin header-footer-bar-wide( object )
	nav.card-styles--white-background.header-footer-bar.header-footer-bar--wide.header-footer-bar--padding-top.card--styles--shadow-footer-header
		.header-footer-bar__bottom-block.header-footer-bar__bottom-block--side-block
			+toxin-logo
			p.header-footer-bar__paragraph Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
		
		.header-footer-bar__bottom-block.header-footer-bar__bottom-block--margin-top
			+nav-menu-footer([
				{
					title: 'навигация',
					items: ['О нас','Новости','Служба поддержки','Услуги']
				},{
					title: 'О нас',
					items: ['О сервисе','Наша команда','Вакансии','Инвесторы']
				},{
					title: 'Служба поддержки',
					items: ['Соглашения','Сообщества','Связь с нами']
				},
			])

		form.header-footer-bar__bottom-block.header-footer-bar__bottom-block--side-block.header-footer-bar__bottom-block--margin-top
			p.header3.text-dark-shade-total Подписка
			p.header-footer-bar__paragraph Получайте специальные предложения и новости сервиса
			+text-field({
				field_type: 'subscribe-field',
				placeholder: 'Email',
				})
	.card-styles--white-background.header-footer-bar.header-footer-bar--thin.header-footer-bar--vertical-center.header-footer-bar--top-border.card--styles--shadow-footer-header
		+copyrights
		+social-web-block