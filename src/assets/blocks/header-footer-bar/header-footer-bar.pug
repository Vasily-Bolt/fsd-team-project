mixin header-footer-bar-thin( object )
	nav.card-styles--white-background.header-footer-bar.header-footer-bar--thin.header-footer-bar--vertical-center.card--styles--shadow-footer-header
			+toxin-logo
			.header-footer-bar__menu-block
				+nav-menu-top([{
					title: 'О нас',
					hovered: true,
				},{
					title: 'Услуги',
					subTitles: ['Услуга раз', 'Услуга два', 'Услуга три', 'Услуга жопу подотри'],
				},{
					title: 'Вакансии',
				},{
					title: 'Новости',
				},{
					title: 'Соглашения',
					subTitles: ['Соглашения раз', 'Соглашения два', 'Соглашения три', 'Соглашения жопу подотри'],
				}])
				if !object.loggedIn
					.header-footer-bar__button-block
						+elongated-button({sizeWidth: '5.4375rem', sizeHeight: '2.125rem', text: 'войти', buttonType: 'empty' })
					//- .header-footer-bar__button-block
					+elongated-button({sizeWidth: '12.25rem', sizeHeight: '2.125rem', text: 'зарегистрироваться', buttonType: 'filled'})
				else
					.header-footer-bar__vertical-line
					a.header-footer-bar__user-name(href='#')= object.userName


