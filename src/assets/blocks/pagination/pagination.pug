//- totalPagesInBase - надпись внизу из "скольки вариантов" с количеством
//- maximalPage - последняя (максимальная) страница

mixin pagination( object )
	- 
		var totalPagesInBase = '100+'
		var maximalPage = Math.floor( +object.totalItems / +object.itemsPerPage ) + 1
	- if ( +object.totalItems < 100 ) totalPagesInBase = object.totalItems;
	//- - if ( object.beginFromPage == maximalPage )
	p
		span maximalPage = #{maximalPage},<br>object.beginFromPage+4 = #{+object.beginFromPage+4}

	.pagination-block
		.pagination-block__pages-list
			+elongated-button({sizeWidth: '40px', sizeHeight: '40px', text: 1, buttonType: 'filled'})
			+elongated-button({sizeWidth: '40px', sizeHeight: '40px', text: 2, buttonType: 'no-border', textType: 'halfdark'})
			+elongated-button({sizeWidth: '40px', sizeHeight: '40px', text: object.beginFromPage+2, buttonType: 'no-border', textType: 'halfdark'})
			- if ( +object.beginFromPage+4 < maximalPage ) 
				+elongated-button({sizeWidth: '40px', sizeHeight: '40px', text: '...', buttonType: 'no-border', textType: 'halfdark'})
			- if ( +object.beginFromPage+4 == maximalPage ) 
				+elongated-button({sizeWidth: '40px', sizeHeight: '40px', text: +object.beginFromPage+3, buttonType: 'no-border', textType: 'halfdark'})
			+elongated-button({sizeWidth: '40px', sizeHeight: '40px', text: maximalPage, buttonType: 'no-border', textType: 'halfdark'})
			+elongated-button({sizeWidth: '40px', sizeHeight: '40px', buttonType: 'with-arrow-right'})
		.pagination-block__total-pages-list
			p #{((object.beginFromPage-1)*object.itemsPerPage)+1} &ndash; #{object.beginFromPage*object.itemsPerPage} из #{totalPagesInBase} вариантов аренды