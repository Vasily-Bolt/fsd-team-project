include ../../../assets/blocks/text-field/text-field.pug
include ../../../assets/blocks/checkbox-radio/checkbox-radio.pug
include ../../../assets/blocks/like-button/like-button.pug
include ../../../assets/blocks/rating-area/rating-area.pug
include ../../../assets/blocks/range-slider/range-slider.pug
include ../../../assets/blocks/elongated-button/elongated-button.pug
include ../../../assets/blocks/pagination/pagination.pug

div(class='wrapper wrapper__elements')
	.gull-emblem-container
		.gull-emblem
	.form-elements
		.form-small-elements
			.form-small-elements__column
				.form-small-elements__simple-forms
					//- Текстовое поле Default
					.text-field-cont
						h3.text-field-cont__title text field
						h3.text-field-cont__status default
						.text-field-cont__visualisation
							+text-field({name: 'text-field', value: 'Email'})
					//- Текстовое поле Hover и Focus
					.text-field-cont
						h3.text-field-cont__title text field
						h3(class='text-field-cont__status padding-top-add-a-bit') hover / focus
						.text-field-cont__visualisation
							input(type='text' id='text-field-hover' name='text-field-hover' value='This is pretty awesome' class='field-template field-template--border-hovered')
					//- Dropdown поле
					.text-field-cont
						h3.text-field-cont__title dropdown
						.text-field-cont__visualisation
							+dropdown-field({value: 'Сколько гостей', dropdown_hidden: 'true'})
					//- Поле с маской ввода
					.text-field-cont
						h3.text-field-cont__title masked text field
						div(class='text-field-cont__visualisation')
							+text-field({name: 'text-field-masked', value: 'ДД.ММ.ГГГГ', pattern: '[1-3][0-9].[0-1][0-9].[1-2][0,9][0-9][0-9]'})
				//- Два рядом стоящих поля Dropdown
				.form-small-elements__date-subscr-forms
					.small-date-container
						.text-field-cont
							h3.text-field-cont__title date dropdown
							.text-field-cont__visualisation
								+dropdown-field({value: 'ДД.ММ.ГГГГ', dropdown_hidden: 'true', size: 'small'})
						.text-field-cont
							h3.text-field-cont__title date dropdown
							.text-field-cont__visualisation
								+dropdown-field({value: '19.08.2019', dropdown_hidden: 'true', size: 'small'})
					//- Поле с выпадающей датой среднего размера
					.text-field-cont
						h3.text-field-cont__title filter date dropdown
						.text-field-cont__visualisation
							+dropdown-field({value: '19 авг - 23 авг', dropdown_hidden: 'true', size: 'medium'})
					//- Поле подписки на новости
					.text-field-cont
						h3.text-field-cont__title subscription text field
						.text-field-cont__visualisation
							+subscription-field({name: 'Subscription', value: 'Email'})
			.form-small-elements__column
				//- Чекбоксы
				.form-small-elements__buttons-block
					h3.title-not-for-fields checkbox buttons
					.button-container
						+checkbox-radio({type:'checkbox', id:'smoke', text:'Можно курить'})
					.button-container
						+checkbox-radio({type:'checkbox', id:'animals', text:'Можно с питомцами', checked:true})
					div(class='button-container button-container--small button-container--last')
						+checkbox-radio({type:'checkbox', id:'friends', text:'Можно пригласить гостей (до 10 человек)', checked:true})
				//- Радио кнопки
				.form-small-elements__buttons-block
					h3.title-not-for-fields radio buttons
					div(class='button-container')
						+checkbox-radio({type:'radio', id:'male', name:'gender', text:'Мужчина', checked:true})
					div(class='button-container button-container--last button-container--inline-paddings')
						+checkbox-radio({type:'radio', id:'female', name:'gender', text:'Женщина'})
				//- Чекбоксы в виде овала с круглым идентификатором
				.form-small-elements__buttons-block
					h3.title-not-for-fields toggle
					.button-container
						+checkbox-radio({type:'toggle-switch', id:'spec1', name:'special-offer', text:'Получать спецпредложения', checked:true})
					div(class='button-container button-container--last-plus button-container--toggle-switch-paddings')
						+checkbox-radio({type:'toggle-switch', id:'spec2', name:'special-offer', text:'Получать спецпредложения'})
				//- Кнопки 'нравится'
				.form-small-elements__buttons-block
					h3.title-not-for-fields like button
					div(class='button-container button-container--last-minus')
						+like-button({id:'likes', number_of_likes:'2'})
					div(class='button-container button-container--likes-paddings button-container--last-minus')
						+like-button({id:'likesnot', number_of_likes:'12', checked: true})
				//- Рейтинг
				.form-small-elements__buttons-block
					h3.title-not-for-fields rate button
					.button-container
						+rating-area({name: 'one', rating: 4})
					.div(class='button-container button-container--inline-paddings')
						+rating-area({name: 'two', rating: 5})
			.form-small-elements__column
					+range-slider
					.div(style='margin-bottom:10px')
						+elongated-button({sizeWidth: '6.1875rem', sizeHeight: '2.75rem', text: 'click me', buttonType: 'filled'})
					.div(style='margin-bottom:10px')
						+elongated-button({sizeWidth: '6.1875rem', sizeHeight: '2.75rem', text: 'click me', buttonType: 'filled', 
							disabled: true})
					.div(style='margin-bottom:10px')
						+elongated-button({sizeWidth: '6.1875rem', sizeHeight: '2.75rem', text: 'click me', buttonType: 'empty'})
					.div(style='margin-bottom:10px')
						+elongated-button({sizeWidth: '6.1875rem', sizeHeight: '2.75rem', text: 'click me', buttonType: 'empty', 
							disabled: true})
					.div(style='margin-bottom:10px')
						+elongated-button({sizeWidth: '6.1875rem', sizeHeight: '1.75rem', text: 'click me', buttonType: 'no-border'})
					.div(style='margin-bottom:10px')
						+elongated-button({sizeWidth: '6.1875rem', sizeHeight: '1.75rem', text: 'click me', buttonType: 'no-border', 
							disabled: true})
					.div(style='margin-bottom:10px')
						+elongated-button({sizeWidth: '20rem', sizeHeight: '2.75rem', text: 'перейти к оплате',
							buttonType: 'with-arrow'})
					.div(style='margin-bottom:10px; width:240px')
						+pagination